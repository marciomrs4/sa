<div class="row">

    <div class="col-md-2 col-sm-3 col-xs-3">

        <a href="{{ "{{ path('" ~ route_name_prefix ~ "_index') }}" }}" class="btn btn-primary btn-sm">
            <span class="fa fa-reply"></span>
            Voltar
        </a>

    </div>


    {%- if ('edit' in actions) and (not hide_edit) %}

        <div class="col-md-2 col-sm-3 col-xs-3">

            <a href="{{ "{{ path('" ~ route_name_prefix ~ "_edit', { 'id': " ~ entity_singularized ~ "."~ identifier ~" }) }}" }}" class="btn btn-primary btn-sm">
                <span class="glyphicon glyphicon-edit"></span>
                Editar
            </a>

        </div>

    {%- endif %}

    {%- if ('delete' in actions) and (not hide_delete) %}

        <div class="col-md-2 col-sm-3 col-xs-3">
            {{ '{{ form_start(delete_form) }}' }}
            <button type="submit" class="btn btn-danger btn-sm">
                <span class="glyphicon glyphicon-trash"></span>
                Deletar
            </button>
            {{ '{{ form_end(delete_form) }}' }}

        </div>

    {%- endif %}

</div>