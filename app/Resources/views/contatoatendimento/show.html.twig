{% extends ':template:template.html.twig' %}



    {% block contentheader %}

        <section class="content-header">
            <h1>
                ContatoAtendimento
                <small>Mostrar</small>
            </h1>
        </section>

    {% endblock %}

 {% block firstrow %}
     <div class="col-md-6 col-sm-12 col-xs-12">

         <div class="box box-primary collapsed-box">
             <div class="box-header with-border">
                 <h3 class="box-title">
                     <button type="button" class="btn btn-primary btn-xs" data-widget="collapse">
                         <i class="fa fa-plus"></i>
                         Protocolo de Atendimento
                     </button>
                     <span class="label label-default">{{ tbAtendimento.atPaciente }}</span>
                 </h3>

                 <div class="box-tools pull-right">

                 </div>
                 <!-- /.box-tools -->
             </div>
             <!-- /.box-header -->
             <div class="box-body" style="display: none;">
                 {{ include('SAAtendimentoBundle:tbatendimento/template:tableshow.html.twig', { 'tbAtendimento' : tbAtendimento }) }}
             </div>
             <!-- /.box-body -->
         </div>
     </div>

     <div class="col-md-6 col-sm-12 col-xs-12">
         {{ render(controller('SAAtendimentoBundle:TbApontamento:index',{ 'atendimento' : tbAtendimento.atCodigo })) }}
     </div>

 {% endblock %}

    {% block panelheading %}

        <div class="row">

            <div class="col-md-2 col-sm-3 col-xs-3">

                <a href="{{ path('contatoatendimento_index',{ 'atendimento' : contatoAtendimento.atendimentoId }) }}" class="btn btn-primary btn-sm">
                    <span class="fa fa-reply"></span>
                    Listar Contatos
                </a>

            </div>
            <div class="col-md-2 col-sm-3 col-xs-3">

                <a href="{{ path('contatoatendimento_edit', { 'id': contatoAtendimento.id }) }}" class="btn btn-primary btn-sm">
                    <span class="glyphicon glyphicon-edit"></span>
                    Editar
                </a>

            </div>

            <div class="col-md-2 col-sm-3 col-xs-3">
                <a href="{{ path('atendimento_show',{ 'id' : contatoAtendimento.atendimentoId }) }}" class="btn btn-primary btn-sm">
                    <span class="fa fa-phone-square"></span>
                    Mostrar Atendimento
                </a>
            </div>
        </div>
    {% endblock %}



    {% block panelbody %}

        <div class="table table-responsive">
            <table class="table table-bordered table-condensed">
                <tbody>
                <tr>
                    <th>NÃºmero de telefone</th>
                    <td>{{ contatoAtendimento.numeroTelefone }}</td>
                </tr>
                <tr>
                    <th>Contato</th>
                    <td>{{ contatoAtendimento.contato }}</td>
                </tr>
                <tr>
                    <th>Tipo de telefone</th>
                    <td>{{ contatoAtendimento.tipoTelefone }}</td>
                </tr>
                </tbody>
            </table>
        </div>


    {% endblock %}
