{% extends ':template:template.html.twig' %}


    {% block contentheader %}


        <section class="content-header">
            <h1>
                Tipo de Apontamento
                <small>Listar</small>
            </h1>
        </section>


    {% endblock %}


    {% block panelheading %}
        <a href="{{ path('tipoapontamento_new') }}" class="btn btn-primary btn-sm">
            <span class="glyphicon glyphicon-plus"></span>
            Novo
        </a>
    {% endblock %}

    {% block panelbody %}
        <div class="table-responsive">
            <table class="table table-bordered table-condensed table-hover table-striped">
                <thead>
                <tr>

                    <th>Opções</th>
                    <th>Titulo</th>
                    <th>Descrição</th>
                    <th>Status</th>
                </tr>
                </thead>
                <tbody>
                {% for tbTipoApontamento in tbTipoApontamentos %}
                    <tr>
                        <td>
                            <a href="{{ path('tipoapontamento_show', { 'id': tbTipoApontamento.tapCodigo }) }}" class="btn btn-primary btn-sm">
                                <span class="glyphicon glyphicon-eye-open"></span>
                            </a>
                            <a href="{{ path('tipoapontamento_edit', { 'id': tbTipoApontamento.tapCodigo }) }}" class="btn btn-primary btn-sm">
                                <span class="glyphicon glyphicon-edit"></span>
                            </a>
                        </td>
                        <td>{{ tbTipoApontamento.tapTitulo }}</td>
                        <td>{{ tbTipoApontamento.tapDescricao }}</td>
                        <td>
                            {% if tbTipoApontamento.tapStatus == 1 %}
                                Ativo
                            {% else %}
                                Inativo
                            {% endif %}
                        </td>
                        <td>{{ tbTipoApontamento.atCodigo.atDescricao }}</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>


    {% endblock %}
