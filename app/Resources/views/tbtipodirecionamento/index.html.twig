{% extends ':template:template.html.twig' %}

{% block stylesheets %}

    {{ parent() }}

    <link rel="stylesheet" href="{{ asset('bundles/saatendimento/css/dataTables.bootstrap.css') }}">

{% endblock %}

    {% block contentheader %}


        <section class="content-header">
            <h1>
                Tipo de Direcionamento
                <small>Listar</small>
            </h1>
        </section>


    {% endblock %}


    {% block panelheading %}
        <a href="{{ path('tipodirecionamento_new') }}" class="btn btn-primary btn-sm">
            <span class="glyphicon glyphicon-plus"></span>
            Novo
        </a>
    {% endblock %}

    {% block panelbody %}
        <div class="table-responsive">
            <table class="table table-bordered table-condensed table-hover table-striped table-datatable">
                <thead>
                <tr>
                    <th>Opções</th>
                    <th>Descrição</th>
                    <th>Status</th>
                </tr>
                </thead>
                <tbody>
                {% for tbTipoDirecionamento in tbTipoDirecionamentos %}
                    <tr>
                        <td>
                            <a href="{{ path('tipodirecionamento_show', { 'id': tbTipoDirecionamento.tdCodigo }) }}" class="btn btn-primary btn-xs">
                                <span class="glyphicon glyphicon-eye-open"></span>
                            </a>
                            <a href="{{ path('tipodirecionamento_edit', { 'id': tbTipoDirecionamento.tdCodigo }) }}" class="btn btn-primary btn-xs">
                                <span class="glyphicon glyphicon-edit"></span>
                            </a>
                        </td>
                        <td><a href="{{ path('tipodirecionamento_show', { 'id': tbTipoDirecionamento.tdCodigo }) }}">{{ tbTipoDirecionamento.tdDescricao }}</a></td>
                        <td>
                            {% if tbTipoDirecionamento.tdAtivo == 1%}
                                Ativo
                            {% else %}
                                Inativo
                            {% endif %}
                        </td>

                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>


    {% endblock %}


{% block javascripts %}
    {{ parent() }}

    <script src="{{ asset('bundles/saatendimento/js/jquery-datatable.js') }}"></script>
    <script src="{{ asset('bundles/saatendimento/js/dataTables.bootstrap.js') }}"></script>
    <script src="{{ asset('bundles/saatendimento/js/mrs-dataTable.js') }}"></script>

{% endblock %}