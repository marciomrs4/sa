{% extends ':template:template.html.twig' %}



    {% block contentheader %}

        <section class="content-header">
            <h1>
                Acesso
                <small>Mostrar</small>
            </h1>
        </section>

    {% endblock %}

    {% block panelheading %}

        <div class="row">

            <div class="col-md-2 col-sm-3 col-xs-3">

                <a href="{{ path('admin_usuario_show', { 'id': tbAcesso.usuCodigo.id }) }}" class="btn btn-primary btn-sm">
                    <span class="glyphicon glyphicon-eye-open"></span>
                    Mostrar Usu√°rio
                </a>

            </div>
            <div class="col-md-2 col-sm-3 col-xs-3">

                <a href="{{ path('acesso_edit', { 'id': tbAcesso.aceCodigo }) }}" class="btn btn-primary btn-sm">
                    <span class="glyphicon glyphicon-edit"></span>
                    Editar
                </a>

            </div>
            <div class="col-md-2 col-sm-3 col-xs-3">
                {{ form_start(delete_form) }}
                <button type="submit" class="btn btn-danger btn-sm">
                    <span class="glyphicon glyphicon-trash"></span>
                    Deletar
                </button>
                {{ form_end(delete_form) }}

            </div>
        </div>
    {% endblock %}



    {% block panelbody %}

        <div class="table table-responsive">
            <table class="table table-bordered table-condensed">
                <tbody>
                <tr>
                    <th>Login</th>
                    <td>{{ tbAcesso.aceUsuario }}</td>
                </tr>
                <tr>
                    <th>Senha</th>
                    <td>#########</td>
                </tr>
                <tr>
                    <th>Status</th>
                    <td>
                        {% if tbAcesso.aceAtivo == 'S' %}
                            Ativo
                        {% else %}
                            Inativo
                        {% endif %}
                    </td>
                </tr>
                </tbody>
            </table>
        </div>


    {% endblock %}
