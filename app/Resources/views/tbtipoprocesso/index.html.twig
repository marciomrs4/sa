{% extends ':template:template.html.twig' %}


{% block contentheader %}
    <section class="content-header">
        <h1>
            Tipo de processo
            <small>Listar</small>
        </h1>
    </section>
{% endblock %}

{% block panelheading %}

    <a href="{{ path('tipoprocesso_new') }}" class="btn btn-primary btn-sm">
        <span class="glyphicon glyphicon-plus"></span>
        Novo
    </a>

{% endblock %}

    {% block panelbody %}


        <div class="table-responsive">
            <table class="table table-bordered table-condensed table-hover table-striped">
                <thead>
                <tr>
                    <th>Opções</th>
                    <th>Descrição</th>
                    <th>Status</th>
                </tr>
                </thead>
                <tbody>
                {% for tbTipoProcesso in tbTipoProcessos %}
                    <tr>
                        <td>
                            <a href="{{ path('tipoprocesso_show', { 'id': tbTipoProcesso.ttpCodigo }) }}"
                               class="btn btn-primary btn-xs">
                                <span class="glyphicon glyphicon-eye-open"></span>
                            </a>
                            <a href="{{ path('tipoprocesso_edit', { 'id': tbTipoProcesso.ttpCodigo }) }}"
                               class="btn btn-primary btn-xs">
                                <span class="glyphicon glyphicon-edit"></span>
                            </a>
                        </td>
                        <td>{{ tbTipoProcesso.ttpDescricao }}</td>
                        <td>
                            {% if tbTipoProcesso.ttpStatus == 1%}
                                Ativo
                            {% else %}
                             Inativo
                            {% endif %}
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>


    {% endblock %}
