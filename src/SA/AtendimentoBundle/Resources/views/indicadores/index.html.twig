{% extends '@SAAtendimento/tbatendimento/template/template.html.twig' %}

{% block contentheader %}
    <section class="content-header">
        <h1>
            Indicadores
            <small>Produtividade</small>
        </h1>
    </section>
{% endblock %}

{% block firstrow %}
    
    <div class="col-md-12 col-sm-12 col-xs-12">

        <div class="box box-primary">
            <div class="panel-body">
                {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}

                <div class="row">

                    <div class="form-group col-md-2 col-sm-3 col-xs-6">
                        {{ form_row(form.dataInicial) }}
                    </div>
                    <div class="form-group col-md-2 col-sm-3 col-xs-6">
                        {{ form_row(form.dataFinal) }}
                    </div>

                </div>

            </div>

            <div class="panel-footer">

                <div class="row">

                    <div class="col-md-2">
                        <div class="input-load">
                            <button class="btn btn-default btn-sm input-search">
                                <span class="glyphicon glyphicon-search"></span>
                                Procurar
                            </button>
                        </div>

                        {{ form_end(form) }}
                    </div>

                </div>

            </div>

        </div>


    </div>

    {#{{ dump(data) }}#}
    {#{{ dump(produtos) }}#}

{% endblock %}

{% block panelheading%}

    <h3 class="panel-title">Tipo de Atendimento (Ativo/Receptivo)</h3>

{% endblock %}


{% block panelbody %}

    <div class="row">


        <div class="col-md-4">
            <div class="box box-info">
                <div class="box-header with-border">
                    <h3 class="box-title">Atendimentos</h3>

                    <div class="box-tools pull-right">
                        <button type="button" class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-minus"></i></button>
                    </div>
                </div>
                <!-- /.box-header -->
                <div class="box-body">
                    <div class="table-responsive">
                        <table class="table no-margin table-hover table-striped">
                            <thead>
                            <tr>
                                <th>Usuário</th>
                                <th>Ativo</th>
                                <th>Receptivo</th>
                                <th>Total</th>
                            </tr>
                            </thead>

                            <tbody>

                                {% for atendimento in atendimentos %}
                                <tr>
                                    <td>{{ atendimento.usuario }}</td>
                                    <td>{{ atendimento.ativo }}</td>
                                    <td>{{ atendimento.receptivo }}</td>
                                    <td>{{ atendimento.total }}</td>
                                </tr>
                                {% endfor %}

                            </tbody>

                        </table>
                    </div>
                    <!-- /.table-responsive -->
                </div>
                <!-- /.box-body -->
            </div>
        </div>

        <div class="col-md-4">
            <div class="box box-info">
                <div class="box-header with-border">
                    <h3 class="box-title">Apontamentos do atendimento</h3>

                    <div class="box-tools pull-right">
                        <button type="button" class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-minus"></i></button>
                    </div>
                </div>
                <!-- /.box-header -->
                <div class="box-body">
                    <div class="table-responsive">
                        <table class="table no-margin table-hover table-striped">
                            <thead>
                            <tr>
                                <th>Usuário</th>
                                <th>Ativo</th>
                                <th>Receptivo</th>
                                <th>Total</th>
                            </tr>
                            </thead>

                            <tbody>

                            {% for apontamento in apontamentos %}
                                <tr>
                                    <td>{{ apontamento.usuario }}</td>
                                    <td>{{ apontamento.ativo }}</td>
                                    <td>{{ apontamento.receptivo }}</td>
                                    <td>{{ apontamento.total }}</td>
                                </tr>
                            {% endfor %}

                            </tbody>

                        </table>
                    </div>
                    <!-- /.table-responsive -->
                </div>
                <!-- /.box-body -->
            </div>
        </div>


        <div class="col-md-4">
            <div class="box box-info">
                <div class="box-header with-border">
                    <h3 class="box-title">Apontamentos do produto</h3>

                    <div class="box-tools pull-right">
                        <button type="button" class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-minus"></i></button>
                    </div>
                </div>
                <!-- /.box-header -->
                <div class="box-body">
                    <div class="table-responsive">
                        <table class="table no-margin table-hover table-striped">
                            <thead>
                            <tr>
                                <th>Usuário</th>
                                <th>Ativo</th>
                                <th>Receptivo</th>
                                <th>Total</th>
                            </tr>
                            </thead>

                            <tbody>
                            {% for apontamentoProduto in apontamentoProdutos %}
                                <tr>
                                    <td>{{ apontamentoProduto.usuario }}</td>
                                    <td>{{ apontamentoProduto.ativo }}</td>
                                    <td>{{ apontamentoProduto.receptivo }}</td>
                                    <td>{{ apontamentoProduto.total }}</td>
                                </tr>
                            {% endfor %}
                            </tbody>

                        </table>
                    </div>
                    <!-- /.table-responsive -->
                </div>
                <!-- /.box-body -->
            </div>
        </div>

    </div>

{% endblock %}