{% extends '@SAAtendimento/tbatendimento/template/template.html.twig' %}

{% block contentheader %}
    <section class="content-header">
        <h1>
            Atendimentos
            <small>Por Tipo de Atendimento e Status</small>
        </h1>
    </section>
{% endblock %}

{% block firstrow %}
    <div class="col-md-12 col-sm-12 col-xs-12">

        <div class="panel panel-default">
            <div class="panel-body">
                {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}

                <div class="row">

                    <div class="form-group col-md-3 col-sm-3 col-xs-6">
                        {{ form_label(form.atDataRetornoA) }}

                        {{ form_widget(form.atDataRetornoA) }}
                    </div>
                    <div class="form-group col-md-3 col-sm-3 col-xs-6">
                        {{ form_label(form.atDataRetornoB) }}
                        {{ form_errors(form.atDataRetornoB) }}
                        {{ form_widget(form.atDataRetornoB) }}
                    </div>

                </div>

            </div>

            <div class="panel-footer">

                <button class="btn btn-default btn-sm">
                    <span class="glyphicon glyphicon-search"></span>
                    Procurar
                </button>

                {{ form_end(form) }}

            </div>

        </div>

    </div>


{% endblock %}

{% block panelheading%}
<h3 class="panel-title">
   Quantidade de Resultado(s): {{ tbAtendimentos|length }}
</h3>
{% endblock %}

{% block panelbody %}
    <div class="table table-responsive">
        <table class="table table-bordered table-hover table-condensed table-striped">
            <thead>
            <tr>
                <th>Quantidade</th>
                <th>Tipo de Atendimento</th>
                <th>Status</th>
            </tr>
            </thead>
            <tbody>
            {% for tbAtendimento in tbAtendimentos %}
                <tr>
                    <td>{{ tbAtendimento.Quantidade }}</td>
                    <td>{{ tbAtendimento.TipoAtendimento }}</td>
                    <td>{{ tbAtendimento.Status }}</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>

{% endblock %}
